<h2>Riepilogo Ordine</h2>
<!-- Mostrare i prodotti nel carrello, la quantità e il costo totale -->

<form method="post" asp-action="ConcludiOrdine">
    <div class="form-group">
        <label>Indirizzo di Spedizione</label>
        <input type="text" name="indirizzo" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Note</label>
        <textarea name="note" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Concludi Ordine</button>
</form>
