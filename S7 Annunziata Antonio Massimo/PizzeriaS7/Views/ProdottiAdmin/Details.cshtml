@model PizzeriaS7.Models.Prodotto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Prodotto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FotoUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FotoUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prezzo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezzo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TempoConsegna)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TempoConsegna)
        </dd>
        <dt class="col-sm-2">
            Ingredienti
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var ingrediente in Model.Ingredienti)
                {
                    <li>@ingrediente.Nome</li>
                }
            </ul>
        </dd>
