@model PizzeriaS7.Models.Prodotto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Prodotto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoUrl" class="control-label"></label>
                <input asp-for="FotoUrl" class="form-control" />
                <span asp-validation-for="FotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezzo" class="control-label"></label>
                <input asp-for="Prezzo" class="form-control" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoConsegna" class="control-label"></label>
                <input asp-for="TempoConsegna" class="form-control" />
                <span asp-validation-for="TempoConsegna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Ingredienti</label>
                <div>
                    @foreach (var ingrediente in ViewBag.AllIngredienti as List<PizzeriaS7.Models.Ingrediente>)
                    {
                        <div>
                            <input type="checkbox" name="IngredientiIds" value="@ingrediente.Id" />
                            <label>@ingrediente.Nome</label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
