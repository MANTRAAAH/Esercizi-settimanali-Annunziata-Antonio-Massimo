@model IEnumerable<PizzeriaS7.Models.OrdineViewModel>

@{
    ViewBag.Title = "Gestione Ordini";
}

<h2>Gestione Ordini</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID Ordine</th>
            <th>Data Ordine</th>
            <th>Cliente</th>
            <th>Dettagli Ordine</th>
            <th>Totale Ordine</th>
            <th>Stato</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ordine in Model)
        {
            <tr>
                <td>@ordine.OrdineId</td>
                <td>@ordine.DataOrdine.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@ordine.NomeUtente</td>
                <td>
                    <ul>
                        @foreach (var dettaglio in ordine.DettagliOrdine)
                        {
                            <li>@dettaglio.ProdottoNome - Quantità: @dettaglio.Quantità - Prezzo Totale: @dettaglio.PrezzoTotale &euro;</li>
                        }
                    </ul>
                </td>
                <td>@ordine.DettagliOrdine.Sum(d => d.PrezzoTotale) &euro;</td>
                <td>@(ordine.Evaso ? "Evaso" : "Non evaso")</td>
                <td>
                    <a href="@Url.Action("Details", "OrdiniAdmin", new { id = ordine.OrdineId })" class="btn btn-info">Dettagli</a>
                    @if (!ordine.Evaso)
                    {
                        <form asp-action="MarcaComeEvaso" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@ordine.OrdineId" />
                            <button type="submit" class="btn btn-success">Marca come evaso</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-success">Evaso</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
