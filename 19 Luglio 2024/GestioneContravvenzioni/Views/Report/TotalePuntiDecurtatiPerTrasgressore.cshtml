@model IEnumerable<TrasgressorePunti>

@{
    ViewData["Title"] = "Totale Punti Decurtati per Trasgressore";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <!-- Tabella con Bootstrap -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Cognome</th>
                    <th>Nome</th>
                    <th>Totale Punti Decurtati</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Idanagrafica</td>
                        <td>@item.Cognome</td>
                        <td>@item.Nome</td>
                        <td>@item.TotalePuntiDecurtati</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
