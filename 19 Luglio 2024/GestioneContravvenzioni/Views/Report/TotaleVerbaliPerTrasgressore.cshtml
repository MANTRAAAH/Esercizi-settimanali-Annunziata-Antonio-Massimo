@model IEnumerable<TrasgressoreDettagli>

@{
    ViewData["Title"] = "Totale Verbali per Trasgressore";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <!-- Tabella con Bootstrap -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Cognome</th>
                    <th>Nome</th>
                    <th>Indirizzo</th>
                    <th>Città</th>
                    <th>CAP</th>
                    <th>Codice Fiscale</th>
                    <th>Totale Verbali</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Idanagrafica</td>
                        <td>@item.Cognome</td>
                        <td>@item.Nome</td>
                        <td>@item.Indirizzo</td>
                        <td>@item.Città</td>
                        <td>@item.CAP</td>
                        <td>@item.Cod_Fisc</td>
                        <td>@item.TotaleVerbali</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
