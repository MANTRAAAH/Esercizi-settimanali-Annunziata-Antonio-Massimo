@model IEnumerable<ViolazioneDettagli>

@{
    ViewData["Title"] = "Violazioni con Punti Superiori a 10";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <!-- Tabella con Bootstrap -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Importo</th>
                    <th>Cognome</th>
                    <th>Nome</th>
                    <th>Data di Violazione</th>
                    <th>Decurtamento Punti</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Importo.ToString("C")</td> <!-- Formatta come valuta -->
                        <td>@item.Cognome</td>
                        <td>@item.Nome</td>
                        <td>@item.DataViolazione.ToShortDateString()</td>
                        <td>@item.DecurtamentoPunti</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
