@model GestoreAlbergo.Models.CheckoutViewModel

<h2 class="my-4">Dettagli del Checkout</h2>

<div class="card mb-4">
    <div class="card-header">
        <h3>Dettagli Cliente</h3>
    </div>
    <div class="card-body">
        <p><strong>Nome:</strong> @Model.Cliente.Nome</p>
        <p><strong>Cognome:</strong> @Model.Cliente.Cognome</p>
        <p><strong>Email:</strong> @Model.Cliente.Email</p>
        <p><strong>Telefono:</strong> @Model.Cliente.Telefono</p>
        <p><strong>Indirizzo:</strong> @Model.Cliente.CodiceFiscale</p>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h3>Dettagli Prenotazione</h3>
    </div>
    <div class="card-body">
        <p><strong>Numero Camera:</strong> @Model.Prenotazione.Camera.Numero</p>
        <p><strong>Periodo:</strong> @Model.Prenotazione.PeriodoDal.ToShortDateString() - @Model.Prenotazione.PeriodoAl.ToShortDateString()</p>
        <p><strong>Tariffa Applicata:</strong> @Model.Prenotazione.TariffaApplicata.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</p>
        <p><strong>Caparra:</strong> @Model.Prenotazione.Caparra.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</p>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h3>Servizi Aggiuntivi</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Descrizione</th>
                    <th>Quantità</th>
                    <th>Prezzo</th>
                    <th>Totale</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var servizio in Model.ServiziAggiuntivi)
                {
                    <tr>
                        <td>@servizio.Descrizione</td>
                        <td>@servizio.Quantita</td>
                        <td>@servizio.PrezzoFormatted</td>
                        <td>@servizio.TotaleFormatted</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h3>Totale da Saldare</h3>
    </div>
    <div class="card-body">
        <p class="h4">@Model.TotaleDaSaldareFormatted</p>
    </div>
</div>
