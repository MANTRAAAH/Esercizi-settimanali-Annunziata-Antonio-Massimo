
@model IEnumerable<Prenotazione>

@{
    ViewData["Title"] = "Risultati della Ricerca";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>Nessuna prenotazione trovata per il Codice Fiscale fornito.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Cliente</th>
                <th class="text-center">Numero Camera</th>
                <th>Inizio Soggiorno</th>
                <th>Fine Soggiorno</th>
                <th>Tariffa Applicata</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prenotazione in Model)
            {
                <tr>
                    <td>@prenotazione.Cliente.Nome @prenotazione.Cliente.Cognome</td>
                    <td class=" text-center">@prenotazione.Camera.Numero</td>
                    <td>@prenotazione.PeriodoDal.ToShortDateString()</td>
                    <td>@prenotazione.PeriodoAl.ToShortDateString()</td>
                    <td>@prenotazione.TariffaApplicata.ToString("C")</td>
                    <td>
                        <a asp-action="GetCheckoutDetails" asp-route-prenotazioneId="@prenotazione.Id" class="btn btn-info">Visualizza Dettagli</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
