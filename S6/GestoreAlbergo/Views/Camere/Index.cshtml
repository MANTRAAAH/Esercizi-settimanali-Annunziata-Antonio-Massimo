@model IEnumerable<Camera>

@{
    ViewData["Title"] = "Camere";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-primary">Aggiungi Nuova Camera</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Numero</th>
            <th>Descrizione</th>
            <th>Tipologia</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Numero</td>
                <td>@item.Descrizione</td>
                <td>@item.Tipologia</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Modifica</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Dettagli</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn {
        margin-right: 5px;
    }

    .btn-primary {
        background-color: #2C3E50;
        border-color: #2C3E50;
    }

        .btn-primary:hover {
            background-color: #0f1a28;
            border-color: #0f1a28;
        }

    .btn-warning {
        background-color: #f0ad4e;
        border-color: #eea236;
    }

    .btn-info {
        background-color: #5bc0de;
        border-color: #46b8da;
    }
</style>
