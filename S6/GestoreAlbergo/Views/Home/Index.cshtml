@{
    ViewData["Title"] = "Pagina Principale";
    var user = User;
    var isAdminOrDipendente = user.IsInRole("Admin") || user.IsInRole("Dipendente");
}
<div class="container mt-5">
    <div class="row">
        @if (isAdminOrDipendente)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Clienti">
                    <div class="card-body">
                        <h5 class="card-title">Gestione Clienti</h5>
                        <p class="card-text">Visualizza, aggiungi, modifica e gestisci i clienti dell'hotel.</p>
                        <a href="@Url.Action("Index", "Clienti")" class="btn btn-primary">Vai a Clienti</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Prenotazioni">
                    <div class="card-body">
                        <h5 class="card-title">Gestione Prenotazioni</h5>
                        <p class="card-text">Visualizza, crea, modifica e gestisci le prenotazioni delle camere.</p>
                        <a href="@Url.Action("Index", "Prenotazioni")" class="btn btn-primary">Vai a Prenotazioni</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Camere">
                    <div class="card-body">
                        <h5 class="card-title">Gestione Camere</h5>
                        <p class="card-text">Visualizza e gestisci le camere dell'hotel.</p>
                        <a href="@Url.Action("Index", "Camere")" class="btn btn-primary">Vai a Camere</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Report">
                    <div class="card-body">
                        <h5 class="card-title">Report Prenotazioni</h5>
                        <p class="card-text">Visualizza il numero totale di prenotazioni per soggiorni di tipo "pensione completa".</p>
                        <a href="@Url.Action("GetTotalPrenotazioniPensioneCompleta", "Report")" class="btn btn-primary">Visualizza Report</a>
                    </div>
                </div>
            </div>
        }

        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Servizi Aggiuntivi">
                <div class="card-body">
                    <h5 class="card-title">Servizi Aggiuntivi</h5>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p class="card-text">Visualizza e gestisci i servizi aggiuntivi offerti durante il soggiorno.</p>
                        <a href="@Url.Action("CercaPrenotazione", "ServiziAggiuntivi")" class="btn btn-primary">Aggiungi un Servizio ad una Prenotazione</a>
                    }
                    else
                    {
                        <p class="card-text">Abbiamo Una Vasta offerta Per Rendere Il Tuo Soggiorno Indimenticabile</p>
                        <a href="@Url.Action("CatalogoServizi", "ServiziAggiuntivi")" class="btn btn-primary">Scopri I Nostri Servizi</a>
                    }
                </div>
            </div>
        </div>

        @if (isAdminOrDipendente)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Checkout">
                    <div class="card-body">
                        <h5 class="card-title">Checkout</h5>
                        <p class="card-text">Effettua il Checkout di una prenotazione</p>
                        <a href="@Url.Action("Search", "Checkout")" class="btn btn-primary">Effettua il Checkout</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
