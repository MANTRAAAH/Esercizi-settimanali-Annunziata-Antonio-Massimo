@model IEnumerable<Cliente>

@{
    ViewData["Title"] = "Clienti";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-primary">Crea Nuovo Cliente</a>
</p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Codice Fiscale</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Città</th>
            <th>Provincia</th>
            <th>Email</th>
            <th>Telefono</th>
            <th>Cellulare</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr data-cliente-id="@cliente.Id">
                <td>@cliente.CodiceFiscale</td>
                <td>@cliente.Cognome</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Citta</td>
                <td>@cliente.Provincia</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Cellulare</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-success btn-sm mb-1">Modifica</a>
                    <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-info btn-sm">Dettagli</a>
                    <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-danger btn-sm">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>

