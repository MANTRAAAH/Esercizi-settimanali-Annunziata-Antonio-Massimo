@model IEnumerable<Cliente>

@{
    ViewData["Title"] = "Clienti";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crea Nuovo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Codice Fiscale</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Città</th>
            <th>Provincia</th>
            <th>Email</th>
            <th>Telefono</th>
            <th>Cellulare</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr data-cliente-id="@cliente.Id">
                <!-- ID del cliente memorizzato qui, ma non visualizzato -->
                <td>@cliente.CodiceFiscale</td>
                <td>@cliente.Cognome</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Citta</td>
                <td>@cliente.Provincia</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Cellulare</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-success">Modifica</a>
                    <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-info">Dettagli</a>
                    <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-danger">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
