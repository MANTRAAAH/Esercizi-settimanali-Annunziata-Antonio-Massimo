
@model IEnumerable<GestoreAlbergo.Models.ListaServiziAggiuntivi>

@{
    ViewData["Title"] = "Lista Servizi Aggiuntivi";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Nome Servizio</th>
            <th>Descrizione</th>
            <th>Prezzo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servizio in Model)
        {
            <tr>
                <td>@servizio.NomeServizio</td>
                <td>@servizio.Descrizione</td>
                <td>@servizio.Prezzo.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<style>
    :root {
        --primary: #2C3E50;
        --secondary: #7F8C8D;
        --success: #2ECC71;
        --info: #ECF0F1;
        --warning: #F5F5DC;
        --light: #FFFFFF;
        --dark: #2C3E50;
    }

    .bg-primary {
        background-color: var(--primary) !important;
    }

    .text-primary {
        color: var(--primary) !important;
    }

    .table {
        margin-top: 20px;
    }

    .thead-dark th {
        background-color: var(--primary);
        color: var(--light);
    }
</style>