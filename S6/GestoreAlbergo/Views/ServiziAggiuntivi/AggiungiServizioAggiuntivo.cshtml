@model AggiungiServizioViewModel

@{
    ViewData["Title"] = "Aggiungi Servizio Aggiuntivo";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="AggiungiServizioAggiuntivo">
    <input type="hidden" asp-for="PrenotazioneID" />
    <div class="form-group">
        <label asp-for="ListaServizioID" class="control-label">Nome Servizio</label>
        <select asp-for="ListaServizioID" class="form-control" asp-items="Model.ListaServizi"></select>
    </div>
    <div class="form-group">
        <label asp-for="Data" class="control-label"></label>
        <input asp-for="Data" id="dataInput" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Quantita" class="control-label">Quantità</label>
        <input asp-for="Quantita" class="form-control" type="number" />
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Aggiungi" class="btn btn-primary" />
    </div>
</form>
@section Scripts {
    <script>
        $(document).ready(function () {
            
            var today = new Date();
           
            var formattedDate = today.toISOString().split('T')[0];
          
            $('#dataInput').val(formattedDate);
        });
    </script>
}