@model IEnumerable<ServizioAggiuntivoViewModel>

@{
    ViewData["Title"] = "Lista Servizi Aggiuntivi";
}

<h1>Lista Servizi Aggiuntivi</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Descrizione</th>
            <th>Quantità</th>
            <th>Prezzo</th>
            <th>Totale</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servizio in Model)
        {
            <tr>
                <td>@servizio.Descrizione</td>
                <td>@servizio.Quantita</td>
                <td>@servizio.Prezzo</td>
                <td>@servizio.Totale</td>
                <td>
                    <form asp-action="RimuoviServizioAggiuntivo" method="post" class="d-inline">
                        <input type="hidden" name="servizioId" value="@servizio.ID" />
                        <input type="hidden" name="prenotazioneId" value="@ViewBag.PrenotazioneId" />
                        <button type="submit" class="btn btn-danger btn-sm">Rimuovi</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CercaPrenotazione" class="btn btn-secondary">Torna alla Ricerca Prenotazioni</a>
