@model IEnumerable<GestioneContravvenzioni.Models.Anagrafica>

@{
    ViewData["Title"] = "Anagrafiche";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="mb-4 text-center">
        <a asp-action="Create" class="btn btn-primary">Nuova Anagrafica</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>CAP</th>
                <th>Cod. Fisc.</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Cognome</td>
                    <td>@item.Nome</td>
                    <td>@item.Indirizzo</td>
                    <td>@item.Città</td>
                    <td>@item.CAP</td>
                    <td>@item.Cod_Fisc</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Idanagrafica" class="btn btn-warning btn-sm">Modifica</a>
                        <!-- <a asp-action="Details" asp-route-id="@item.Idanagrafica" class="btn btn-info btn-sm">Details</a> -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
